@model IEnumerable<QuestRooms6_Model.OrderHeader>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Orers History</h1>
<div class="container p-md-3 table-responsive-md bg-white">
    <div class="row pt-md-4">
        <div class="col-md-6">
            <h2 class="text-primary">Order List</h2>
        </div>
    </div>
    <div>
        <ejs-grid id="Grid" dataSource="@Model" allowFiltering="true" allowSorting="true" allowPaging="true">
            <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
                <e-grid-column field="FullNane" headerText="Name" textAlign="Right"></e-grid-column>
                <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
                <e-grid-column field="CountRoom" headerText="Count Room" textAlign="Right"></e-grid-column>
                <e-grid-column field="FinalTotalPrice" format="C0" headerText="Price Rooms" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderDate" headerText="Order Date" customFormat="@(new {type="date", format="MM/dd/yyyy"})" textAlign="Right" width="100"></e-grid-column>
                <e-grid-column field="Id" headerText="" width=70 template="<a rel='nofollow' href='Order/Detail/${Id}' class='btn btn-primary'> <i class='fas fa-list'></i></a>">
                </e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
