@model QuestRooms6.Model.ViewModels.LoginRegistrViewModel
<div class="py-4">
    <h2>Регистрация нового пользователя</h2>
    <form method="post" asp-controller="Account" asp-action="Register"  >
        <div class="py-2">
            <input asp-for="FullName" placeholder="Name" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="py-2">
            <input asp-for="Email" placeholder="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="py-2">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">+38</span>
                </div>
                <input asp-for="PhoneNumber" placeholder="PhoneNumber" type="text" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-row row py-2">
            <div class="col-6">
                <input asp-for="Password" placeholder="password" type="password" class="form-control" />
            </div>
            <div class="col-6">
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="py-2">
            @if (User.IsInRole(WebConstanta.AdminRole))
            {
                <button id="registerSubmit" type="submit" class=" btn-warning form-control rounded ">Register Admin User</button>
            }
            else
            {
                <button id="registerSubmit" type="submit" class="btn-primary form-control rounded">Register</button>
            }
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
