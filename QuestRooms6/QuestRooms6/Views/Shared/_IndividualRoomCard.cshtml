@model QuestRooms6_Model.Room
@using QuestRooms6_Model

@{
            string imreBase64Data = Convert.ToBase64String(Model.BytesImage);
            string imgDataURL = string.Format("data:image/png;base64,{0}", imreBase64Data);
            

}

    <div class="col-lg-4 col-md-6 pb-4 filter  @Model.DifltLevel @Model.FLevel"  > 
        <!-- Card-->
        <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
            <div class="card-body px-3 pt-3 pb-1 row">
                <div class="col-7"><label class="float-left ">@Model.Name</label></div>
                <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format("{0:C0}",Model.Price)</span></label> </div>
            </div>
         @*   <img class=" img-fluid d-block mx-auto mb-4" style="width: 620px; height: 230px;" src="@WebConstanta.ImagePath@Model.Image" alt="Card image cap">*@
            <img class=" img-fluid d-block mx-auto mb-4" style="width: 620px; height: 230px;" src="@imgDataURL" alt="Card image cap">
            <div class="card-body p-1 px-3 row">
                <div class="col-6  "  >
                    <span class="badge p-2 border w-100 text-dark  "  style="background-color:lavenderblush;">@Model.DifltLevel</span>
                </div>
                <div class="col-6 border-0">
                    <span class="badge p-2 border w-100 text-dark" style="background-color:aliceblue">@Model.FLevel</span>
                </div>
                <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                    <p>@Model.Description</p>
                </div>
                <div class="col-12 p-1">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
                </div>
            </div>
        </div>
    </div>